<div class="row">
	<div class="col-lg-6">
		<div class="panel">
			<div class="panel-heading" style="background-color:#d9534f;">
				<h2 class="accordion-toggle"data-toggle="collapse" data-parent="#accordion" href="#friend_list" style="text-align:center;"><%= csrf_meta_tags %><strong><%= conversation.subject %></strong></h2>
			</div>
			<div class="panel-body" style="padding:0 !important;">
					<div class="conversation_list">
						<ul class="conversation_list_ul">
							<% conversation.receipts_for(current_user).each do |receipt| %>
							<li class="conversation_list_item">
								<div class="vertical_array_menu c_l_item_subject">
									<ul>
										<li>
											<% message = receipt.message %>
											<strong>
												<%=message.subject %>
											</strong>
										</li>
										<li>
											<%= message.body %>
										</li>
									</ul>
								</div>
								<ol>
									<li>
										사진과 시간
									</li>
								</ol>
							</li>
							<% end %>
						</ul>
					</div>	
			</div>
		</div>

		<%= render 'message/form' , conversation: conversation %>
	</div>
	<div class="col-lg-6">
		<div class="panel">
			<div  class="horizon_array_menu_h btn_mail">
				<ul>
					<li class="active">	<h2><a href="#btn_inbox" data-toggle="tab"><strong>받은 편지함</strong></a></h2></li>
					<li>	<h2><a href="#btn_sentbox" data-toggle="tab"><strong>보낸 편지함</strong></a></h2></li>
				</ul>
			</div>	
			<div class="tab-content" style="padding:0 !important;margin-top:54px;">
				<div class="tab-pane fade active in" id="btn_inbox">
					<div class="conversation_list">
						<ul class="conversation_list_ul">
							<%@mailbox.inbox.each do |conversation| %>
							<li class="conversation_list_item">
								<div class="vertical_array_menu c_l_item_subject">
									<ul>
										<li>
											<strong>
												<%= link_to conversation.subject+'님과의 대화', conversation_path(conversation),style:'width:100%;height:25px;position:absolute;color:#000;'%>
											</strong>
										</li>
										<li>
											<%= link_to conversation.subject, conversation_path(conversation),style:'width:100%;position:absolute;top:25px;height:25px;color:#666'%>
										</li>
									</ul>
								</div>
								<ol>
									<li>
										<%= link_to "", trash_conversation_path(conversation),data: { confirm: "휴지통으로 버리시겠습니까?" } ,method: :post,class:'fa fa-trash' %>
									</li>
								</ol>
							</li>
							<% end %>
						</ul>
					</div>
				</div>
				<div class="tab-pane fade" id="btn_sentbox">
					<div class="conversation_list">
						<ul class="conversation_list_ul">
							<%@mailbox.sentbox.each do |conversation| %>
							<li class="conversation_list_item">
								<div class="vertical_array_menu c_l_item_subject">
									<ul>
										<li>
											<strong>
												<%= link_to conversation.subject+'님과의 대화', conversation_path(conversation),style:'width:100%;height:25px;position:absolute;color:#000;'%>
											</strong>
										</li>
										<li>
											<%= link_to conversation.subject, conversation_path(conversation),style:'width:100%;position:absolute;top:25px;height:25px;color:#666'%>
										</li>
									</ul>
								</div>
								<ol>
									<li>
										<%= link_to "", trash_conversation_path(conversation),data: { confirm: "휴지통으로 버리시겠습니까?" } ,method: :post,class:'fa fa-trash' %>
									</li>
								</ol>
							</li>
							<% end %>
						</ul>
					</div>						
				</div>
			</div>
		</div>
	</div>