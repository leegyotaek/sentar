

<% if @micropost %>
$('#micropost-<%=@micropost.id %>').html("<%=j render @micropost.comments %>")
$('#comment_form-<%= @micropost.id %>')[0].reset()


<% end %>



<% if @product  %>


$('#comment_form')[0].reset()
$('#product-<%=@product.id %>').html("<%=j render @product.comments,partial: "comments/product_comment" , product: @product %>")

<% end %>


$(function(){
var target_id='#micropost-<%=@micropost.id %>';
$('#micropost-scroll-div').css('scrollTop', $(target_id).offset().top);
$('#micropost-scroll-div').animate({ scrollTop: <%=@micropost.comments.size%>*100 }, 2000); 
