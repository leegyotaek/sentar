
<% comments.each do |comment|     %>
<li class="left clearfix" id="comment-<%=comment.id %>">
											<% @user = comment.user %>
											 
											<span class="chat-img pull-left"> <%= gravatar_for @user , size: 50   ,class:'img-circle'%></span>
											<div class="chat-body clearfix">
												<div class="header">
													<strong class="primary-font"> <%= comment.user_name %> </strong>
													<small class="pull-right text-muted">
														<%if current_user?(@user)  %>		
														<%= link_to '삭제', comment_path(comment), method: :delete, remote: :true,  data: { confirm: '댓글 삭제?' } %>
														<%= time_ago_in_words(comment.created_at) %> ago

														<% end %>	

													</small>
												</div>

												
												<p>
													<%= comment.content %>
												</p>
											</div>
											
</li>

<% end %>