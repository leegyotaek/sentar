	<!-- blog list -->
	<div class="panel-group" id="arcodian">
		<%@microposts.each do |micropost| %>
		<div class="panel panel-default">
			<div class="media blog_list_item" id="micropost-<%=micropost.id%>">
				<%=link_to gravatar_for(micropost.user), blog_path,class:'pull-left'%>   
				<div class="media-body">
					<div class="row">
						<div class="col-lg-10">
							<h4 class="media-heading">
								<%=link_to micropost.user.name, micropost.user,target:''%>
							</h4>
							<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapse<%=micropost.id%>" target>
								<%=micropost.title%>
							</a>                    
						</div>
						<div class="col-lg-2">
							<div>
								<div  style="float:right;">
									<span><strong><i class="fa fa-thumbs-up"></i></i></strong></span> <span id="like-<%= micropost.id %>"><%= micropost.likes.count %></span>
									&nbsp; <span><strong><i class="fa fa-comment"></i></strong></span>
									<span><%= micropost.comments.count %></span>
								</div>               

								<div >                            	
									<span class="blog_timestamp"><%=time_ago_in_words(micropost.created_at)%> ago</span>
								</div> 
							</div>
						</div>
					</div>
				</div>
			</div>

			
			<div id="collapse<%=micropost.id%>" class="panel-collapse collapse">
				<div class="panel-body">
					<div>
						<%=image_tag micropost.picture.url if micropost.picture?%>    
					</div>
					<div>
						<%=micropost.content%>
					</div>
					<hr>
					<div class="row">
						<div class="col-lg-12">
							<div class="comment_wrap">
								<div class="chat-panel panel panel-default">
									<!--댓글 wrap head 김수겸 14_09_15-->
									<div class="panel-heading">
										<i class="fa fa-comments"></i>
										<div class="horizon_array_menu_h comment_menu">
											<script type="text/javascript">
											$(function() {
												$(".tfs_tooltip").tooltip();
											});
											</script>
												
												<li>	
												<span id="<%=micropost.id%>"><%= link_to '좋구만', like_micropost_path(micropost), method: :post, remote:true ,class:"btn btn-default btn-xs like_btn"%></span>
												</li>
											
										</div>
									</div>
									<!--댓글 wrap head end-->

									<!--댓글 wrap body 김수겸 14_09_14-->
									<div class="panel-body",id="chat_comment">
										<ul class="chat" >
											<% micropost.comments.each do |comment| %>
											<li class="left clearfix">
												<% @user = User.find_by(name: comment.user_name)||current_user  %>
												<span class="chat-img pull-left"> <%= gravatar_for @user , size: 50   ,class:'img-circle'%></span>
												<div class="chat-body clearfix">
													<div class="header">
														<strong class="primary-font"> <%= comment.user_name %> </strong>
														<small class="pull-right text-muted">
															<%if current_user?(@user)%>					
															<%= link_to '삭제', comment_path(comment), method: :delete, data: { confirm: '댓글 삭제?' } %>
															<% end %>
															<i class="icon-time"></i> <%=time_ago_in_words(comment.created_at)%> ago </small>
														</div>
														<br>
														<p>
															<%= comment.content %>
														</p>
													</div>
												</li>
												<% end %>								
											</ul>
										</div>
										<!--댓글 wrap body end-->

										<!--댓글 wrap footer 김수겸 14_09_14-->
										<div class="panel-footer">
											<div class="input-group">
												<%= form_for(@comment) do |f| %>
												<% if @comment.errors.any? %>
												<div id="error_explanation">
													<h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

													<ul>
														<% @comment.errors.full_messages.each do |message| %>
														<li><%= message %></li>
														<% end %>
													</ul>
												</div>
												<% end %> 
												<%= f.hidden_field :user_name, value: current_user.name %>
												<%= f.text_area :content,class:'form-control input-sm',placeholder:'말은 그 무엇보다 강려크하다',style:'width:500px;' %>
												<%= f.hidden_field :micropost_id, value: micropost.id  %>
												<span class="input-group-btn">
													<% store_location %>
													<%= f.submit('댓글등록',class:'btn btn-default btn-sm',remote: true)%>
													<% end %>
												</span>
											</div>
										</div>
										<!--댓글 wrap footer end-->
									</div>
								</div>
							</div>
						</div>
					</div>  
				</div>
			</div>
		<%end%>
		</div> 
		<!-- blog list end-->    
	</div>

