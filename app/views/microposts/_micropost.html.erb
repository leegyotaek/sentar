<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
  <%= micropost.content %>
  <tr>
  <td><%= pluralize(micropost.likes.count, "좋아요") %></td>
  <td><%= button_to '좋아요', like_micropost_path(micropost), method: :post %></td>
  </tr>
  <%= image_tag micropost.picture.url if micropost.picture? %>
  <h3>Comments</h3>
<% micropost.comments.each do |comment| %>
  <div>
    <strong><%= comment.user_name %></strong>
    <br />
    <p><%= comment.content %></p>
    <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>
<h1>댓글달기</h1>
  <%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
   
    <%= f.hidden_field :user_name, value: current_user.name %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
   <%= f.hidden_field :micropost_id, value: micropost.id  %>


  <div class="actions">
    <% store_location %>
    <%= f.submit %>

  </div>
<% end %>
 </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
     <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" },
                                       title: micropost.content %>
    <% end %>
  </span>
  <div>
                  <span>
                    <%if current_user?(micropost.user)%>
                    <%=link_to "삭제", micropost, method: :delete,
                    data: { confirm: "지우겄쏘??" },
                    title: micropost.content,class:'btn btn-default btn-xs'%> 
                    <%end%>
                  </span>
                </div>
</li>