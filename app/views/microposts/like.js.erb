

$("#like-<%= @micropost.id %>").html('<%= @micropost.likes.count %>')


<% if current_user.already_liked?(@micropost) %>
$("#like_btn_<%=@micropost.id%>").html('<%= j render 'microposts/unlike_form' , micropost: @micropost %> ')
<% else %>
$("#like_btn_<%=@micropost.id%>").html('<%= j render 'microposts/like_form' , micropost: @micropost %> ')
<% end %>
