<%= simple_form_for([@post.bulletin, @post]) do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <%= f.label :title,'제목',class:'col-lg-2  control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content,'내용',class:'col-lg-2  control-label' %>
    <div class="col-lg-10">
      <%= f.text_area :content, class: 'form-control'%>
    </div>
  </div>
  <% if @post.bulletin.post_type == "gallery" %>
    <div class="form-group">
      <%= f.label '이미지',class:'col-lg-2  control-label' %>
      <div class="col-lg-10">
      <div class="fileupload fileupload-new" data-provides="fileupload">
          <div class="fileupload-preview thumbnail" style="width: 200px; height: 150px;"></div>
          <div>
            <span class="btn btn-file btn-success"><span class="fileupload-new">이미지선택</span><span class="fileupload-exists">수정</span><%= f.file_field :picture%><%= f.hidden_field :picture_cache %></span>
            <a href="#" class="btn btn-danger fileupload-exists" data-dismiss="fileupload">삭제</a>
          </div>
      </div>      
      </div>      
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :tag_list,'태그',class:'col-lg-2  control-label' %>
    <div class="col-lg-10">
    <%= f.text_field :tag_list, placeholder: '하나 이상의 태그는 콤마(,)로 구분하여 입력하세요.',class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-10 col-md-offset-2">
      <span><%= f.button :submit,'등록', class: 'btn btn-warning' %></span>
      <span><%= link_to '뒤로', bulletin_posts_path, class: 'btn btn-default' %></span>
    </div>
  </div>
  

<% end %>
